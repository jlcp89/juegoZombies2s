<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <LinearLayout
        android:id="@+id/game_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textNivel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="TextView" />

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/textPuntos"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="TextView" />

            <TextView
                android:id="@+id/textAPP"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Zombie Defense: Random Maps"
                android:gravity="center"/>

        </LinearLayout>



    </LinearLayout>

    <!-- Botones para el joystick de ocho direcciones -->
    <LinearLayout
        android:id="@+id/joystick_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_ari"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                app:srcCompat="@drawable/disparo_arriba_izquierda"
                app:backgroundTint="@color/black"
                app:tint="@color/white"
                android:alpha="0.5"
                app:fabCustomSize="40dp"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:backgroundTint="@color/black"
                app:tint="@color/white"
                app:srcCompat="@drawable/disparo_arriba"
                android:alpha="0.5"
                app:fabCustomSize="40dp"                 />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_ard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                app:srcCompat="@drawable/disparo_arriba_derecha"
                app:backgroundTint="@color/black"
                app:tint="@color/white"
                android:alpha="0.5"
                app:fabCustomSize="40dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:backgroundTint="@color/black"
                app:srcCompat="@drawable/disparo_izquierda"
                app:tint="@color/white"
                android:alpha="0.5"
                app:fabCustomSize="40dp"/>
            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"/>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:backgroundTint="@color/black"
                app:srcCompat="@drawable/disparo_derecha"
                app:tint="@color/white"
                android:alpha="0.5"
                app:fabCustomSize="40dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_abi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                app:srcCompat="@drawable/disparo_abajo_izquierda"
                app:backgroundTint="@color/black"
                app:tint="@color/white"
                android:alpha="0.5"
                app:fabCustomSize="40dp"/>


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:backgroundTint="@color/black"
                app:srcCompat="@drawable/disparo_abajo"
                app:tint="@color/white"
                android:alpha="0.5"
                app:fabCustomSize="40dp"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_abd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                app:srcCompat="@drawable/disparo_abajo_derecha"
                app:backgroundTint="@color/black"
                app:tint="@color/white"
                android:alpha="0.5"
                app:fabCustomSize="40dp"/>

        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
